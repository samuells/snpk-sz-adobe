{
  "name": "snpk-sz-adobe",
  "version": "1.0.0",
  "description": "SZ Brand Studio Adobe",
  "author": "Samuel Snopko (samuell.snopko@gmail.com)",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint:vue": "eslint **/*.vue",
    "lint:scss": "stylelint **/**/*.vue **/**/*.scss",
    "lint": "yarn lint:scss & yarn lint:vue",
    "precommit": "yarn lint",
    "build:ghp": "DEPLOY_ENV=GH_PAGES nuxt build",
    "generate:ghp": "DEPLOY_ENV=GH_PAGES nuxt generate",
    "generate:sz": "DEPLOY_ENV=SZ_PAGES nuxt generate --spa",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.vue": [
      "eslint --fix",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "dom-to-image": "^2.6.0",
    "file-saver": "^2.0.2",
    "lottie-web": "^5.5.4",
    "nuxt": "^2.8.1",
    "vue-affix": "^0.5.2",
    "vue-breakpoints": "^1.1.0",
    "vue-check-view": "^0.3.0",
    "vue-images-loaded": "^1.1.2",
    "vue-parallaxy": "^1.1.1",
    "vue-scrollto": "^2.15.0",
    "vue-social-sharing": "^2.4.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-vue": "^4.7.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.0",
    "node-sass": "^4.13.1",
    "nodemon": "^1.19.1",
    "postcss-normalize": "^8.0.1",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "prettier-stylelint": "^0.4.2",
    "push-dir": "^0.4.1",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.6.0",
    "stylelint-a11y": "^1.1.7",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-block-no-ignored-properties": "^1.1.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.1",
    "vue-svg-loader": "^0.12.0"
  },
  "browserslist": [
    "> 1%",
    "IE 11"
  ]
}
